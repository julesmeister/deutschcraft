# Database Configuration
# Choose one: 'firestore', 'postgres', or 'mongodb'
NEXT_PUBLIC_DATABASE_TYPE=firestore

# ============================================================================
# Firestore Configuration (default)
# ============================================================================
NEXT_PUBLIC_FIREBASE_PROJECT_ID=testmanship-ac721
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=testmanship-ac721.firebaseapp.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=testmanship-ac721.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (server-side)
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY="your_private_key"

# ============================================================================
# PostgreSQL Configuration (if using PostgreSQL)
# ============================================================================
# Uncomment and configure these if NEXT_PUBLIC_DATABASE_TYPE=postgres

# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=testmanship
# POSTGRES_USER=admin
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_SSL=false

# Connection pool settings
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_MIN_CONNECTIONS=5

# ============================================================================
# MongoDB Configuration (if using MongoDB)
# ============================================================================
# Uncomment and configure these if NEXT_PUBLIC_DATABASE_TYPE=mongodb

# MONGODB_CONNECTION_STRING=mongodb://localhost:27017
# MONGODB_DATABASE=testmanship

# ============================================================================
# NextAuth Configuration
# ============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================================
# WebRTC Configuration
# ============================================================================
# Signaling server URL (Cloudflare Durable Object worker)
# Local: ws://localhost:8787  Production: wss://testmanship-signaling.<subdomain>.workers.dev
NEXT_PUBLIC_SIGNALING_URL=ws://localhost:8787

# TURN Server (for cross-network voice/video calls)
# Required for users behind symmetric NATs. Without this, only same-network calls work.
NEXT_PUBLIC_TURN_URL=turn:free.expressturn.com:3478
NEXT_PUBLIC_TURN_USERNAME=your_turn_username
NEXT_PUBLIC_TURN_CREDENTIAL=your_turn_credential

# ============================================================================
# AI Configuration (for flashcard generation)
# ============================================================================
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
